Box :: struct {
    a: mut f32,
    b: mut s64,
    c: mut bool,
}

foo :: (x: s64, y: s64) -> void {
    ret;
}

box_create :: (a: f32, b: s64, c: bool) -> Box {
    foo(1, 2);

    let box: mut Box;
    box.a = a;
    box.b = b;
    box.c = c;

    ret box;
}

box_flip :: (box: Box) -> bool {
    ret !box.c;
}

box_expanded :: (box: Box) -> Box {
    let new: mut Box;
    new.a = box.a + 1;
    new.b = box.b + 1;
    new.c = true;

    ret new;
}

$public
main :: () -> s64 {
    let box: mut Box = box_create(1.17, 42, false);
    box = box_expanded(box);

    ret box_flip(box);
}
